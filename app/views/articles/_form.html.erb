<%= form_with(model: @article, local: true)  do |form| %>
    <div class="">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div class="">
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
    </div>

    <div class="">
        <%= form.submit %>
    </div>
<% end %>
