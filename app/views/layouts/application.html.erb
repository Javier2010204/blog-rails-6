<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <p style="<%= 'display:none;' if notice.nil? && alert.nil? %>" class="alert alert-primary">
          <%= notice %>
          <%= alert %>
      </p>
    <%= render 'partials/nav'%>
    <%= yield %>
  </body>
</html>
